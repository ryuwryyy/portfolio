<div class="row form">
  <div class="col-lg-12">
    <%= form_for(@ask) do |f| %>
      <h3><span>Q</span><%= @question.text %></h3>
      <div class="form-group">
        <%= f.text_area :text, placeholder: "入力してください/ Please Write Here", cols:"30", rows:"10", autofocus:"true", class:"form-control" %>
      </div>
      <%= f.hidden_field_tag(:question_id, params[:question_id]) %>
      <%= f.submit "送信/ Send", method: :post, class:"btn btn-primary withripple"%>
    <% end %>
  </div>
</div>
