<% provide :title, " ｜ プロフィール編集" %>
<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>プロフィール画像/ Profile Picture</h2>
      <div class="form-group file">
        <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード/ Upload" %>
      </div>
      <h2>登録情報/ Profile</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :family_name, placeholder: "姓/ Last Name", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name, placeholder: "名/ First Name", class: "form-control" %>
        </div>
         <div class="col-lg-6">
          <%= f.text_field :nickname, placeholder: "Nickname", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :family_name_kana, placeholder: "年齢/ Age", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name_kana, placeholder: "国/ Country", class: "form-control" %>
        </div>

        <div class="col-lg-6">
          <%= f.text_field :language, placeholder: "言語/Language", class: "form-control" %>
        </div>

        <div class="col-lg-6">
          <%= f.text_field :pastime, placeholder: "趣味/ Pastime ", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信/Send", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
